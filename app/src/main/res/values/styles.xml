<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/mainPrimary</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">@color/mainPrimary</item>
    </style>

    <style name="teamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/team_text_size</item>
        <item name="android:textColor">@color/teamName</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">@dimen/activity_small_vertical_margin</item>
    </style>

    <style name="teamScore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/score_text_size</item>
        <item name="android:textColor">@color/teamScore</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">@dimen/activity_small_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="scoreButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_small_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_small_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_small_horizontal_margin</item>
    </style>

    <style name="verticalLine">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="teamGroupLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="teamLinear">
        <item name="android:layout_width">@dimen/linear_weightedWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="parentRelative">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="resetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:text">@string/reset</item>
    </style>

</resources>








